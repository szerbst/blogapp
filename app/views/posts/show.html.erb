<%= link_to "Back to Project", project_path(@post.project_id) %>
<h3><%= @post.title %></h3>
<p><%= @post.content %></p>
<p>Tags: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
<h3>Images</h3>
<%= render @post.images %>

<div>
<% if user_signed_in? %>
 	<% if @post.user_id == current_user.id %>
		<%= link_to "Edit Post", edit_post_path(@post) %>
		<%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
		<%= link_to "Add Images", new_post_image_path(@post) %>
	<% end %>
<% end %>
</div>