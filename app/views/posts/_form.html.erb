

<%= form_for([@project, @project.posts.build]) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>
	<%= f.label :content %>
	<%= f.text_field :content %><br>
	<%= f.label :tag_list %>
	<%= f.text_field :tag_list, value: @post.tag_list.to_s %><br>
	<%= f.button :submit %><br>
	<%= link_to "Cancel", project_path(@project) %>
<% end %>