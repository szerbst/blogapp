<!DOCTYPE html>
<html>
  <head>
    <title>Forum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<div class="header">

      <div class="header-top">

        <div class="logo">
          <img src="http://www.kiwibiker.co.nz/forums/images/BP-Brown/misc/kiwibiker_logo.png">
        </div>

        <div class="toplinks">
          <ul>
            <% if user_signed_in? %>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
              <li>You are logged in as <%= current_user.username %></li>
            <% else %>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
              <li><%= link_to "Log In", new_user_session_path %></li>
            <% end %>
          </ul>
        </div>

      </div>

			<div class="navbar1">

        <div class="navtabs">
          <ul>
            <li><%= link_to "Home", root_path, class: "" %></li>
            <li><%= "Other tab" %></li>
            <li><%= "Anther tab" %></li>
          </ul>
        </div>

        <div class="searchfield">
          <%= form_tag searches_path, :method => :get do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :title => nil %>
          </p>
          <% end %>
        </div>
      </div>

      <div>
        <p class=""><%= notice %></p>
        <p class=""><%= alert %></p>
      </div>

    </div>

    <%= yield %>

    <div class="footer">
      <div class="footer-text">
        <div class="copyright">
          &copy; Sam Zerbst
        </div>

        <div class="navbar1">

          <div class="navtabs">
            <ul>
              <li><%= link_to "Home", root_path, class: "" %></li>
              <li><%= "Other tab" %></li>
              <li><%= "Anther tab" %></li>
            </ul>
          </div>

          <div class="searchfield">
            <%= form_tag searches_path, :method => :get do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :title => nil %>
            </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
